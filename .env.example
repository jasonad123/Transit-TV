# Transit TV Environment Variables
# Copy this file to .env and fill in the appropriate values

# Application settings
# ---------------------
# NODE_ENV: Set to 'development' for local development, 'production' for production deployment
NODE_ENV=production

# PORT: The port on which the application will run
PORT=8080

# API Keys
# --------
# TRANSIT_API_KEY: Required for accessing the Transit API
# Get your API key from https://transitapp.com/apis
TRANSIT_API_KEY=your_transit_api_key_here

# Security
# --------
# SESSION_SECRET: Secret used for session encryption
# In production, use a strong, unique value
# Easy way to generate it: openssl rand -hex 32 
SESSION_SECRET=change_this_to_a_secure_random_string

# REQUEST_TIMEOUT: API request timeout in milliseconds
REQUEST_TIMEOUT=10000

# Cache Configuration
# ---------------------
# Client-side cache (Vite environment variables - prefixed with VITE_)
# These control how long the browser caches API responses
#
# Rate Limit Calculations:
# Free tier (5 calls/min): With 10s polling = max 6 calls/min (self-regulating with 6s retry-after)
# Paid tier (60+ calls/min estimate): With 5s polling = max 12 calls/min (safe margin)

# VITE_REALTIME_CACHE_TTL: Cache duration for real-time prediction data (milliseconds)
# Shorter TTL = fresher departure times but more API calls
# Free tier (5 calls/min): 5000ms recommended
# Paid tier (60+ calls/min): 3000ms for maximum freshness
VITE_REALTIME_CACHE_TTL=5000

# VITE_STATIC_CACHE_TTL: Cache duration for schedule-only data (milliseconds)
# Longer TTL for static schedules reduces API load when no real-time data available
# Recommended: 120000ms (2 minutes) for all tiers
VITE_STATIC_CACHE_TTL=120000

# VITE_CLIENT_POLLING_INTERVAL: How often to poll for updates (milliseconds)
# Should be slightly higher than REALTIME_CACHE_TTL to ensure fresh fetches
# Free tier (5 calls/min): 10000ms recommended (~10-15s actual delay vs Transit app)
# Paid tier (60+ calls/min): 5000-7000ms for maximum freshness (~5-10s delay)
VITE_CLIENT_POLLING_INTERVAL=10000

# Server-side cache (optional, for multi-display deployments)
# ---------------------
# ENABLE_SERVER_CACHE: Enable server-side request caching for multi-display deployments
# Options: true, false (defaults to false if not set)
# When enabled, reduces API calls by 67-90% when multiple displays share the same location
# Recommended for agencies running multiple Transit TV instances at the same facility
ENABLE_SERVER_CACHE=false

# REALTIME_CACHE_TTL: Server cache duration for real-time predictions (milliseconds)
# Should match or be slightly lower than client REALTIME_CACHE_TTL
# Only applies when ENABLE_SERVER_CACHE=true
REALTIME_CACHE_TTL=3000

# STATIC_CACHE_TTL: Server cache duration for schedule data (milliseconds)
# Longer TTL reduces upstream API calls for schedule-only locations
# Only applies when ENABLE_SERVER_CACHE=true
STATIC_CACHE_TTL=120000

# TRUST_PROXY: if running behind a reverse proxy or load balancer (nginx, Cloudflare, etc.):
# Set this value to enable support for the graceful shutdown feature.
# Values accepted: true, an Integer - 1, 2 (number of proxy hops)
TRUST_PROXY=

# CORS Settings (Development Only)
# ----------------------------------
# ALLOWED_ORIGINS: Comma-separated list of domains allowed to access the API
# Only used in development mode when SvelteKit dev server runs separately from Express.
# In production, CORS is disabled because both frontend and backend run on the same origin.
# Development example: http://localhost:5173,http://localhost:8080
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8080

# Logging
# -------
# LOG_LEVEL: Minimum level of logs to output (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# Unattended Setup
# ----------------
# UNATTENDED_SETUP: Enable automatic setup without user interaction (true/false)
# When set to "true", the configuration screen will be skipped and these values will be used
UNATTENDED_SETUP=true

# UNATTENDED_TITLE: Display title for the application
UNATTENDED_TITLE="Transit TV"

# UNATTENDED_TIME_FORMAT: Time display format
# Options: "HH:mm" (24-hour), "hh:mm A" (12-hour with AM/PM), or "hh:mm" (12-hour without AM/PM)
UNATTENDED_TIME_FORMAT=HH:mm

# UNATTENDED_LOCATION: Latitude and longitude coordinates for transit data
# Format: "latitude,longitude" (e.g., "40.7240,-74.0002" for New York City)
UNATTENDED_LOCATION=

# UNATTENDED_LANGUAGE: Interface language
# Options: en (English), fr (Français), es (Español), de (Deutsch)
# Defaults to "en" if not set
UNATTENDED_LANGUAGE=en

# UNATTENDED_MAX_DISTANCE: Maximum distance in meters to search for nearby routes
# Options: 250, 500, 750, 1000, 1250, 1500 (defaults to 500 if not set)
UNATTENDED_MAX_DISTANCE=500

# UNATTENDED_COLUMNS: Number of columns to display
# Options: auto, 1, 2, 3, 4, 5
UNATTENDED_COLUMNS=auto

# UNATTENDED_THEME: Theme for background
# Options: light, dark, auto
UNATTENDED_THEME=auto

# UNATTENDED_HEADER_COLOR: Hex color code for header background
# Format: "#RRGGBB" (e.g., #FF5733)
UNATTENDED_HEADER_COLOR=(#hex)

# UNATTENDED_SHOW_QR_CODE: Show QR code with Transit deeplink - riders can scan the QR code to open the Transit app at the location
# Options: true, false (defaults to false if not set)
UNATTENDED_SHOW_QR_CODE=false

# UNATTENDED_CUSTOM_LOGO: URL or local path to your organization's logo
# The logo will be displayed alongside the "Powered by Transit" logo in the header
# Supports both external URLs and local file paths when using Docker volumes
# External URL example: https://example.com/logo.png
# Local path example (with Docker volume mount): /assets/images/logo.png
# See compose.yaml for volume mount instructions
UNATTENDED_CUSTOM_LOGO=

# UNATTENDED_GROUP_ITINERARIES: Group directions with shared stop names
# Options: true, false (defaults to false if not set)
# When enabled, directions of a route serving the same parent station will be visually grouped together
UNATTENDED_GROUP_ITINERARIES=false

# UNATTENDED_FILTER_TERMINUS: Filter redundant terminus entries
# Options: true, false (defaults to false if not set)
# When enabled, removes redundant destination entries like "North to Waterfront" when already at Waterfront
UNATTENDED_FILTER_TERMINUS=false

# UNATTENDED_SHOW_ROUTE_NAMES: Show route names next to icon-only routes
# Options: true, false (defaults to false if not set)
# When enabled, displays route names alongside icons for better clarity
UNATTENDED_SHOW_ROUTE_NAMES=true