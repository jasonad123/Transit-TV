{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "prHourlyLimit": 4,
  "minimumReleaseAge" : "7 days",
  "ignorePaths": [
    "compose.yaml",
    "railway.json",
    "Dockerfile.dhi"
  ],
  "packageRules": [
    {
      "description": "Group all non-major dependencies together",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": false
    },
    {
      "description": "Group SvelteKit ecosystem updates",
      "matchPackageNames": ["^@sveltejs/", "svelte"],
      "groupName": "SvelteKit packages",
      "schedule": ["* 0-3 * * 1"]
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "schedule": ["* 0-3 * * 1"],
      "pinDigests": true
    },
    {
      "description": "Separate major updates",
      "matchUpdateTypes": ["major"],
      "labels": ["breaking-change"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Group Docker base image updates",
      "matchDatasources": ["docker"],
      "groupName": "Docker base images",
      "schedule": ["* 0-3 * * 1"]
    },
    {
      "description": "Pin Node.js version to avoid auto-updates",
      "matchPackageNames": ["node"],
      "matchManagers": ["dockerfile", "github-actions"],
      "enabled": true,
      "dependencyDashboardApproval": true
    }
  ]
}
